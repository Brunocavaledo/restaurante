{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Projeto C++",
            "type": "shell",
            "command": "/usr/bin/g++-13",
            "args": [
                "-std=c++17",
                "-g",
                "Chef.cpp",
                "main.cpp",
                "Mesa.cpp",
                "Restaurante.cpp",
                "-o",
                "main"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compila todos os arquivos do projeto usando g++-13"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-13 build active file",
            "command": "/usr/bin/g++-13",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}